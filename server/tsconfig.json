{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "typeRoots": [ "./types", "../node_modules/@types"]
  },
  "include": [
    "config/**/*",
    "migrations/**/*",
    "src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "types",
    "**/*.spec.ts"
  ]
}
